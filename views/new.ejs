<% include partials/header %>

<section class="container form-section">
  <div class="row">
    <h1>Add a New Bird</h1>
    <div class="form-container">
      <form action="/birds" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" placeholder="English name" name="englishName">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Scientic name" name="scientificName">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Preview Image Url" name="prevImage">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Audio Url" name="audio">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" placeholder="Description" name="description">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-block">Submit!</button>
        </div>
      </form>
      <a class="lnk" href="/birds"> <i style="font-size: 19px; width: 30px" class="fa fa-arrow-left"></i> Go Back</a>
    </div>
  </div>
</section>

<% include partials/footer %>
